                                        <span asp-validation-for="Surname" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="cv_inputs">
                                        <label asp-for="BornDate">
                                            Doğum Tarixi
                                        </label>
                                        <input type="text"
                                               value="@Model.BornDate.ToString("dd/MM/yyyy")"
                                               class="form-control inputs"
                                               readonly>
                                        <span asp-validation-for="BornDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="cv_inputs">
                                        <label asp-for="Email">E-Poçt</label>
                                        <input asp-for="Email"
                                               class="form-control inputs" disabled />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
