
@{
    Layout = "_MyAccount";

}

<div class="account">
    <div class="account_bar">
        <a href="#" class="logo" aria-label="hellojob">
            <img src="~/assets/images/night_mode_logo.svg" alt="" />
        </a>
        <ul class="myprofile">

            <li>
                <a class="active" asp-controller="myaccount" asp-action="index">
                    <span>
                        <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/user2.svg"
                             alt="" />
                    </span>
                    Profilim
                </a>
            </li>
            <li>
                <a asp-controller="myaccount" asp-action="myorder">
                    <span>
                        <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/megaphone.svg"
                             alt="" />
                    </span>
                    Gözləmədə olan elanlar
                </a>
            </li>
            <li>
                <a asp-controller="myaccount" asp-action="mysticker">
                    <span>
                        <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/megaphone.svg"
                             alt="" />
                    </span>
                    Elanlarım
                </a>
            </li>
            <li>
                <a asp-controller="myaccount" asp-action="wishlistpage">
                    <span>
                        <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/heart2.svg"
                             alt="" />
                    </span>
                    Bəyəndiklərim
                </a>
            </li>
            <li>
                <a asp-controller="myaccount" asp-action="security">
                    <span>
                        <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/shield.svg"
                             alt="" />
                    </span>
                    Təhlükəsizlik
                </a>
            </li>
            @if (User.IsInRole(UserRole.business.ToString()))
            {
                <li>
                    <a  asp-controller="myaccount" asp-action="createvacans">
                        <span>
                            <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/shield.svg"
                                 alt="" />
                        </span>
                        Vakansiya Yerləşdir
                    </a>
                </li>
                <li>
                    <a asp-controller="myaccount" asp-action="creatingcompany">
                        <span>
                            <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/shield.svg"
                                 alt="" />
                        </span>
                        Şirkət Yarat
                    </a>
                </li>
                <li>
                    <a asp-controller="myaccount" asp-action="mycompany">
                        <span>
                            <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/cv.svg"
                                 alt="" />
                        </span>
                        Şirkətlərim
                    </a>
                </li>
            }
            else
            {
                <li>
                    <a asp-controller="myaccount" asp-action="createcv">
                        <span>
                            <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/cv.svg"
                                 alt="" />
                        </span>
                        Cv yerləşdir
                    </a>
                </li>
            }

        </ul>
        <div class="backsite">
            <a asp-controller="home" asp-action="index"
               class="btn btn-site btn-transparent d-md-none">Sayta keçid et</a>
        </div>
    </div>
    <div class="account_content">
        <div class="account_head">
            <div class="account_head_tools">
                <a asp-controller="home" asp-action="index"
                   class="btn btn-site btn-transparent d-none d-md-block">Sayta keçid et</a>
                <div class="account_head_user">
                    <a href="./account.html" class="profile__header__user__name">
                        <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/user.svg"
                             alt="" />
                        <span>@ViewBag.User.FullName</span>
                    </a>
                    <ul class="account_head_user_drop">
                        <li><a asp-controller="myaccount" asp-action="mysticker">Mənim elanlarım</a></li>
                        <li>
                            <a asp-controller="myaccount" asp-action="security">Şəxsi məlumatlar</a>
                        </li>
                        <li><a asp-controller="account" asp-action="logout">Çıxış</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="account_body">
            <div class="my-profile">
                <div class="my-profile__head">
                    <h1 class="my-profile__name">Xoş gəlmisiniz, @ViewBag.User.FullName</h1>
                    <p>Hellojob.az</p>
                </div>
                <div class="row">
                    @if (User.IsInRole(UserRole.business.ToString()))
                    {
                        <div class="col-lg-3 col-md-6 ">
                            <a class="my-profile__item" asp-controller="company" asp-action="createvacans">
                                <div class="my-profile__item__icon">
                                    <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/building.svg"
                                         alt="" />
                                </div>
                                <h2 class="my-profile__item__name">Vakansiya Yerləşdir</h2>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-3 col-md-6">
                            <a class="my-profile__item" asp-controller="myaccount" asp-action="createcv">
                                <div class="my-profile__item__icon">
                                    <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/user-check.svg"
                                         alt="" />
                                </div>
                                <h2 class="my-profile__item__name">CV yerləşdir</h2>
                            </a>
                        </div>
                    }

               
                    <div class="col-lg-3 col-md-6">
                        <a class="my-profile__item" asp-controller="myaccount" asp-action="mysticker">
                            <div class="my-profile__item__icon"> 
                                <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/share.svg"
                                     alt="" />
                            </div>
                            <h2 class="my-profile__item__name">Elanlarım</h2>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <a class="my-profile__item" asp-controller="myaccount" asp-action="wishlistpage">
                            <div class="my-profile__item__icon">
                                <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/check-heart.svg"
                                     alt="" />
                            </div>
                            <h2 class="my-profile__item__name">Bəyəndiklərim</h2>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
