<section id="titles_and_bgblue">
    <div class="blueback">
    </div>
    <div class="container">
        <div class="row">
            <div class="titles col-lg-12 col-md-12">
                <ul>
                    <li>
                        <a asp-controller="home" asp-action="index">İş elanları</a>
                    </li>
                    <li>
                        <a asp-controller="cvpage" asp-action="index">CV-lər</a>
                    </li>
                </ul>
            </div>
