@{
    ViewBag.Title = "Rules";
}
@model List<Rules>
<section id="liked">
    <section id="titles_and_bgblue">
        <div class="blueback"></div>
        <div class="container">
            <div class="row">
                <div class="titles col-lg-12 col-md-12">
                    <div class="two_side_bridge">
                        <ul>
                            <li>
                                <a asp-controller="home" asp-action="index">Əsas səhifə </a>
                            </li>
                            <li>
                                <a asp-controller="rules" asp-action="index">Ümumi Qaydalar</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
<section id="rules">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="title">
                    <h1>Ümumi qaydalar</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 blog p-0">
                <div class="row">
                    <div class="desc col-md-12 full">
                        <p>
                            Vakansiya yerləşdirmək üçün qaydalar<br />
                        </p>
                        <ol>
                            <li>Vakansiyanın saytda qalma müddəti 30 gündür.</li>
                            @foreach (var item in Model.Where(x=>x.Vacans==true))
                            {
                                <li>
                                  @item.Rule
                                </li>
                            }
                           
                          
                        </ol>
                        <p>CV yerləşdirmək üçün qaydalar</p>
                        <ol>
                            @foreach (var item in Model.Where(x => x.CV == true))
                            {
                                <li>
                                    @item.Rule
                                </li>
                            }
                        </ol>
                        <p>
                            Saytda yerləşdirilən vakansiyalar və CV-lər üçün məsuliyyət
                            elan yerləşdirən tərəf daşıyır.
                        </p>
                        <p></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>