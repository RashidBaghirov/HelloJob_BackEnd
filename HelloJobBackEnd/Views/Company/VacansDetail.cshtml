@{
    ViewBag.Title = "Vacans detail page";
    List<Vacans> related = ViewBag.Related;
}
@model Vacans

      <section id="titles_and_bgblue">
        <div class="blueback"></div>
        <div class="container">
          <div class="row">
            <div class="titles col-lg-12 col-md-12">
              <ul>
                <li>
                  <a asp-controller="home" asp-action="index">İş elanları</a>
                </li>
                <li>
                  <a asp-controller="cvpage" asp-action="index">CV-lər</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </section>
      <section id="vacansdetail">
        <div class="breadcrumbs-block">
          <div class="container">
            <ul class="breadcrumbs">
              <li>
                <a asp-controller="home" asp-action="index">Ana Səhifə</a>
              </li>
              <li>/</li>
              <li>
                <a >@Model.Position</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-6">
              <div class="right_side">
                <div class="vacancies">
                  <div class="vacancies__href">
                            <a asp-controller="company" asp-action="vacansdetail" asp-route-id="@Model.Id">
                                <div class="item_left">
                                    <div class="icon" style="
                         width: 58px !important;height:auto !important">
                                        <img style="
                                 width: 100%;
                                 object-fit: contain;
                                  " src="~/assets/images/Company/@Model.Company.Image"
                                             alt="@Model.Company.Name" />
                                    </div>
                                    <div class="title">
                                        <h3>@Model.Position</h3>
                                        <p>@Model.Company.Name</p>
                                    </div>
                                </div>
                            </a>
                            <div class="item_right">
                                <span class="salary">@(Model.Salary == 0 ? "Ə-h razılaşma ilə" : Model.Salary) (AZN)</span>
                                <span class="date">@Model.CreatedAt.ToString("dd.MM")</span>
                                <span class="like">
                                    <i class="fa-regular fa-heart unliked"></i>
                                    <i class="fa-solid fa-heart liked"></i>
                                </span>
                            </div>
                  </div>
                </div>
                <div class="vacans_block">
                  <h3 class="infos">İş məlumatlar</h3>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="item mb-0">
                        <div class="icon">
                          <img
                            src="https://www.hellojob.az/content/assets/images/resume/svg-icons/pin.svg"
                            alt=""
                          />
                        </div>
                        <div class="text">
                          <h4>@Model.City.Name</h4>
                          <p>Şəhər</p>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="item mb-0">
                        <div class="icon">
                          <img
                            src="https://www.hellojob.az/content/assets/images/resume/svg-icons/briefcase.svg"
                            alt=""
                          />
                        </div>
                        <div class="text">
                          <h4>@Model.Experience.Name</h4>
                          <p>İş təcrübəsi</p>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="item">
                        <div class="icon">
                          <img
                            src="https://www.hellojob.az/content/assets/images/resume/svg-icons/briefcase.svg"
                            alt=""
                          />
                        </div>
                        <div class="text">
                          <h4>@Model.OperatingMode.Name</h4>
                          <p>İş rejimi</p>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="item mb-0">
                        <div class="icon">
                          <img
                            src="https://www.hellojob.az/content/assets/images/resume/svg-icons/briefcase.svg"
                            alt=""
                          />
                        </div>
                        <div class="text">
                          <h4>Kredit mütəxəssisi</h4>
                          <p>@Model.BusinessArea.BusinessTitle.Name</p>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="item mb-0">
                        <div class="icon">
                          <img
                            src="https://www.hellojob.az/content/assets/images/resume/svg-icons/graduation.svg"
                            alt=""
                          />
                        </div>
                        <div class="text">
                          <h4>@Model.Education.Name</h4>
                          <p>Təhsil</p>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="item mb-0">
                        <div class="icon">
                          <img
                            src="https://www.hellojob.az/content/assets/images/resume/svg-icons/briefcase.svg"
                            alt=""
                          />
                        </div>
                        <div class="text">
                                        <h4>@(Model.Salary == 0 ? "Ə-h razılaşma ilə" : Model.Salary) (AZN)</h4>
                          <p>Əmək Haqqı(Azn)</p>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="item mb-0">
                        <div class="icon">
                          <img
                            src="https://www.hellojob.az/content/assets/images/resume/svg-icons/folder.svg"
                            alt=""
                          />
                        </div>
                        <div class="d-flex justify-content-between w-100">
                          <div class="text">
                            <h4>@(Model.DrivingLicense==true ? "Şərtdir" : "Şərt deyil")</h4>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="vacans_block">
                  <h3 class="infos">İş Barədə Məlumat</h3>
                  <ul>
                    @foreach (InfoWork info in Model.InfoWorks)
                            {
                                <li>
                                    @info.Info
                                </li>
                            }
                 
                  </ul>
                </div>
                <div class="vacans_block">
                  <h3 class="infos">Namizəd üçün tələblər</h3>
                  <ul>
                   @foreach (InfoEmployeer info in Model.infoEmployeers)
                            {
                                <li>
                                   @info.Info
                                </li>
                            }
                 
                  </ul>
                </div>
                <div class="request">
                    <div class="button">
                      <button class="req_btn">Müraciət et</button>
                    </div>
                </div>
              </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-3">
              <div class="user_contact">
                <div class="company_body_detail">
                  <div class="contact_body">
                    <div class="stick">
                      <div class="title">
                        <h4>Elan №@Model.Id</h4>
                      </div>
                      <div class="infos">
                        <div class="row">
                          <div class="col-lg-6">
                            <div class="item">
                              <div class="icon d-flex">
                                <div class="all d-flex">
                                  <div class="image">
                                    <img
                                      src="https://www.hellojob.az/content/assets/images/resume/svg-icons/phone.svg"
                                      alt=""
                                    />
                                  </div>
                                  <div class="text">
                                    <h4 class="secrets-title">@Model.CreatedAt.ToString("dd.MM")</h4>
                                    <p>Elan Tarixi</p>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="item">
                              <div class="icon d-flex">
                                <div class="all d-flex">
                                  <div class="image">
                                    <img
                                      src="https://www.hellojob.az/content/assets/images/resume/svg-icons/phone.svg"
                                      alt=""
                                    />
                                  </div>
                                  <div class="text">
                                    <h4 class="secrets-title">@Model.EndedAt.ToString("dd.MM")</h4>
                                    <p>Bitme Tarixi</p>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div class="col-lg-6">
                            <div class="item">
                              <div class="icon d-flex justify-content-between">
                                <div class="all d-flex">
                                  <div class="image">
                                    <img
                                      src="https://www.hellojob.az/content/assets/images/resume/svg-icons/eye.svg"
                                      alt=""
                                    />
                                  </div>
                                  <div class="text">
                                    <h4 class="secrets-title">@Model.Count</h4>
                                    <p>Baxildi</p>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section id="related">
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-8">
              <div class="title">
                <h1>Oxşar Vkansiyalar</h1>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <div class="row">
                   @foreach (Vacans vacans in related)
                        {
                            <div class="col-lg-6">
                                <div class="vacancies">
                                    <div class="vacancies__href">
                                        <a asp-controller="company" asp-action="vacansdetail" asp-route-id="@Model.Id">
                                            <div class="item_left">
                                                <div class="icon" style="
                         width: 58px !important;height:auto !important">
                                                    <img style="
                                 width: 100%;
                                 object-fit: contain;
                                  " src="~/assets/images/Company/@Model.Company.Image"
                                                         alt="@Model.Company.Name" />
                                                </div>
                                                <div class="title">
                                                    <h3>@Model.Position</h3>
                                                    <p>@Model.Company.Name</p>
                                                </div>
                                            </div>
                                        </a>
                                        <div class="item_right">
                                            <span class="salary">@(Model.Salary == 0 ? "Ə-h razılaşma ilə" : Model.Salary) (AZN)</span>
                                            <span class="date">@Model.CreatedAt.ToString("dd.MM")</span>
                                            <span class="like">
                                                <i class="fa-regular fa-heart unliked"></i>
                                                <i class="fa-solid fa-heart liked"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>