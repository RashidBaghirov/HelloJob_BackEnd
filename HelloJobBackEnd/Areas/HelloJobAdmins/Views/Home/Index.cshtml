@model DashboardModel

@{
    ViewBag.Title = "Dashboard";
}

<div class="container">
    <h1>HelloJob Dashboard</h1>
    <p>Welcome to the HelloJob dashboard. Here, you can monitor various job-related metrics and statistics.</p>

    <div class="row">
        <div class="col-md-6">
            <h2>CVs</h2>
            @if (Model.CVs != null && Model.CVs.Count > 0)
            {
                <ol class="list-group list-group-numbered">
                    @foreach (var cv in Model.CVs)
                    {
                        <li class="list-group-item">
                            <strong>User FulName</strong>
                            <br />
                            <span>@cv.User.FullName </span>
                            <br />
                            <strong>FullName in CV</strong>
                            <br />
                            <span>@cv.Name  @cv.Surname</span>
                            <br />
                            <strong> Cv Category</strong>
                            <br />
                            <span>@cv.Position</span>
                            <br />
                        </li>
                    }
                </ol>
            }
            else
            {
                <p>No CVs found.</p>
            }
        </div>
        <div class="col-md-6">
            <h2>Companies</h2>
            @if (Model.Companies != null && Model.Companies.Count > 0)
            {
                <ul class="list-group">
                    @foreach (var company in Model.Companies)
                    {
                        <li class="list-group-item">
                            <strong>@company.Name</strong>
                            <br />
                            <span>@company.User.FullName</span>
                            <br />
                            <strong>Vacancies:</strong>
                            <ul>
                                @foreach (var vacancy in company.Vacans)
                                {
                                    <li>@vacancy.Position</li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No companies found.</p>
            }
        </div>
    </div>
</div>
