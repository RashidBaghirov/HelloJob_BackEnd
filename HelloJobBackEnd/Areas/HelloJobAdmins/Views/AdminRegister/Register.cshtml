@{
    Layout = null;
}
@model RegisterVM
@if (TempData["Register"] != null)
{
    if ((bool)TempData["Register"] == true)
    {
        <input type="hidden" id="registerSuccess" />
    }
    else
    {
        <input type="hidden" id="registerError" />

    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon shortcut" href="https://www.hellojob.az/content/assets/images/favicon.svg?v=2">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/assets/css/login.css">
    <title>Admin Register</title>
</head>

<body class="login-page">
    <div class="login-box">
        <h2 class="heading-login-box">Register</h2>
        <form asp-controller="AdminRegister" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="user-box">
                <input asp-for=Firstname class="user-box-input">
                <label asp-for=Firstname class="user-box-label">Firstname</label>
                <span asp-validation-for="Firstname"></span>
            </div>
            <div class="user-box">
                <input asp-for=Lastname class="user-box-input">
                <label asp-for=Lastname class="user-box-label">LastName</label>
                <span asp-validation-for="Lastname"></span>
            </div>
            <div class="user-box">
                <input asp-for=Username class="user-box-input">
                <label asp-for=Username class="user-box-label">USername</label>
                <span asp-validation-for="Username"></span>

            </div>
            <div class="user-box">
                <input asp-for=Email class="user-box-input">
                <label asp-for=Email class="user-box-label">Email</label>
                <span asp-validation-for="Email"></span>

            </div>
            <div class="user-box">
                <input asp-for=Password class="user-box-input">
                <label asp-for=Password class="user-box-label">Password</label>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="user-box">
                <input asp-for=ConfirmPassword class="user-box-input">
                <label asp-for=ConfirmPassword class="user-box-label">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="user-box">
               
                <select asp-for="adminRoles" class="form-select role mb-3">
                    <option value="@AdminRoles.admin">Admin</option>
                    <option value="@AdminRoles.moderator">Moderator</option>
                </select>
                <label asp-for="adminRoles" class="text-white">Admin's Role</label>
                <span asp-validation-for="adminRoles"></span>
            </div>
            <div class="user-box">
                <input asp-for="Terms">
                <span>Accepted Registration </span>
                <span asp-validation-for="Terms"></span>
            </div>
     
            <a type="submit" class="login-box-button href_admin" href="#">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Submit
            </a>
            <button type="submit" class="sbmt_btn" style="display:none"></button>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"
            integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        var hrefAdminButton = document.querySelector('.href_admin');

        var sbmtButton = document.querySelector('.sbmt_btn');

        hrefAdminButton.addEventListener('click', function () {
            sbmtButton.click();
        });
    </script>
</body>

</html>