@model IEnumerable<Company>

@if (TempData["CompanyAccepted"] != null)
{
    if ((bool)TempData["CompanyAccepted"] == true)
    {
        <input type="hidden" id="acceptedSuccess" />
    }
    else
    {
        <input type="hidden" id="acceptedError" />

    }
}
@if (TempData["CompanyReject"] != null)
{
    if ((bool)TempData["CompanyReject"] == true)
    {
        <input type="hidden" id="rejectedSuccess" />
    }
    else
    {
        <input type="hidden" id="rejectedError" />

    }
}
@if (TempData["Delete"] != null)
{
    if ((bool)TempData["Delete"] == true)
    {
        <input type="hidden" id="deleteSuccess" />
    }
    else
    {
        <input type="hidden" id="deleteError" />

    }
}
<div class="alert alert-primary" role="alert">
   Companies
</div>
<form method="post" asp-controller="CompanyOrder" asp-action="Index">
    <div class="input-group mb-3">
        <input type="text" class="form-control" name="search" id="searchInput">
        <button class="btn btn-outline-secondary" type="button" id="button-addon2" onclick="submitForm()">Search</button>
    </div>
</form>

<script>
    function submitForm() {
        var searchValue = document.getElementById("searchInput").value;
        var form = document.querySelector("form");

        if (searchValue) {
            form.submit();
        } else {
            form.action = "@Url.Action("Index")";
            form.method = "post";
            form.submit();
        }
    }
</script>
<table class="table">
    <thead>
        <tr>
            <th>
               Company Image
            </th>
            <th>
               Company Email
            </th>
            <th>
              Company Name
            </th>
            <th>
              User Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <div style="width:150px;">
                        <img style="width:100%;object-fit:contain;" src="~/assets/images/Company/@item.Image"
                             alt="@item.Name" />
                    </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                    <a asp-action="Accept" asp-route-id="@item.Id" class="btn btn-inverse waves-effect waves-light">Accept</a>
                    <a asp-action="Reject" asp-route-id="@item.Id" class="btn btn-success waves-effect waves-light">Reject</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger waves-effect waves-light">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<nav class="mt-3 d-flex justify-content-center" aria-label="...">
    <ul class="pagination">
        <li class="page-item  @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage-1)" tabindex="-1">Previous</a>
        </li>
        @for (int i = 1; i <= ViewBag.TotalPage; i++)
        {
            <li class="page-item @(i==ViewBag.CurrentPage ? "active pointerNone" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }

        <li class="page-item @(ViewBag.TotalPage == ViewBag.CurrentPage ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage+1)">Next</a>
        </li>
    </ul>
</nav>
